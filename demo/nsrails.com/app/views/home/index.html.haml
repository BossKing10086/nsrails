- Post.all.reverse.each do |post|
	.centered
		.incenter
			.shadow
				.comment
					.comment_date
						=post.created_at.localtime.strftime("%b %e %Y at %l:%M %p")
					%span{:class=>"comment_poster"}
						=post.author
					said,
					.comment_body
						=surround("\"") do
							=post.body
				-if post.responses.count > 0
					.responseDivider
						%hr
					.response
						.comment
							-post.responses.reverse.each do |response|
								-if response.created_at.day == post.created_at.day
									-date_format = "%l:%M %p"
								-else
									-date_format = "%m/%d/%y %l:%M %p"
								.comment_date
									=response.created_at.localtime.strftime(date_format)
								%span{:class=>"comment_poster"}
									=response.author
								replied,
								.comment_body
									=surround("\"") do
										=response.body
								%br